<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.charisha.elternv1.carer.MainCarerScreenActivity"
    android:background="#ffffff"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:background="#4beaff"
        android:layout_alignParentEnd="true">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Eltern  "
            android:id="@+id/textView13"
            android:layout_row="0"
            android:layout_column="10"
            android:textColor="#2b1eff"
            android:textStyle="bold"
            android:textSize="35dp"
            android:gravity="center"
            android:background="#4beaff"
            android:layout_weight="0.12" />


        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.39"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button7"
                    android:onClick="remindersElder"
                    android:src="@drawable/planning5"
                    android:background="@drawable/new_button"/>

                <ImageButton
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/toilet5"
                    android:background="@drawable/new_button"
                    android:onClick="findToilet" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.48"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/phone5"
                android:background="@drawable/new_button"
                android:onClick="emergencyCall"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
