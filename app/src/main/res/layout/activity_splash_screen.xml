<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shakeawayv1.charisha.shakeawayv1.SplashScreen"
    android:background="#4beaff">

<ImageView
    android:id="@+id/titleImage"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_width="200dip"
    android:layout_height="200dip"
    android:gravity="center"/>

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Eltern"
android:id="@+id/textView"
android:textStyle="bold"
android:textSize="70dp"
android:layout_alignParentTop="true"
    android:textColor="#ff444fd1"
    android:gravity="center"
    android:layout_alignParentStart="true"
    android:background="#4beaff"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:layout_alignParentEnd="true" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="helping life move forward"
android:id="@+id/textView2"
android:layout_below="@+id/textView"
    android:textStyle="italic"
android:textSize="25dp"
android:textColor="#ff161616"
    android:layout_above="@+id/titleImage"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="by e-Miracle Workers"
        android:id="@+id/textView14"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_below="@+id/titleImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#2c3dff" />

</RelativeLayout>
