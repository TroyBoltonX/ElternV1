<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.charisha.elternv1.ForgetPasswordUserNameActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Forgot Password"
            android:textSize="30dp"
            android:id="@+id/userNameText"
            android:textColor="#4021ff"
            android:gravity="center"
            android:background="#4beaff"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button8"
        android:onClick="forgetAndChange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameEditText"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please enter username"
        android:id="@+id/textView17"
        android:layout_above="@+id/userNameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>

</RelativeLayout>
