<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="740dp" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.charisha.elternv1.AddRemindersCarerActivity"
    android:id="@+id/rele">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/li">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Reminder"
            android:id="@+id/textView18"
            android:textSize="30dp"
            android:textColor="#4021ff"
            android:gravity="center"
            android:background="#4beaff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reminder Title"
            android:id="@+id/textView20"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/elderReminderTitleET"
            android:singleLine="true"/>

        <TextView
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description / Location"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="17dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/elderReminderDescriptionET"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:weightSum="1">

            <TextView
                android:layout_width="225dp"
                android:layout_height="90dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Set date and Time: "
                android:id="@+id/dateTimeText"
                android:layout_weight="0.40"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:onClick="updateDate"
                android:paddingTop="5dp"
                android:src="@drawable/datetime"
                android:background="@drawable/new_button" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Which elder is the reminder for ?"
            android:id="@+id/textView22"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Reminder"
        android:id="@+id/button10"
        android:layout_gravity="center_horizontal"
        android:onClick="addReminderCarer"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Repeat Reminder?"
        android:id="@+id/textView31"
        android:paddingTop="10dp"
        android:layout_below="@+id/li"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repeatSpinner"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:spinnerMode="dropdown"
        android:background="@android:drawable/btn_dropdown"
        android:textSize="20sp"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true" />
</RelativeLayout>

</ScrollView>