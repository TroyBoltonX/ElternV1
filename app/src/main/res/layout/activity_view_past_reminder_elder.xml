<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="640dp" android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.charisha.elternv1.AddRemindersCarerActivity"
        android:id="@+id/rele">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:id="@+id/li">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reminder"
                android:id="@+id/textView18"
                android:textSize="30dp"
                android:textColor="#4021ff"
                android:gravity="center"
                android:background="#4beaff"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:id="@+id/doneCheckBox"
                android:layout_below="@+id/repeatSpinner"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:textSize="30dp"
                android:checked="false"
                android:paddingTop="30dp" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reminder Title"
                android:id="@+id/textView20"
                android:paddingTop="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleEditText"
                android:singleLine="true"
                android:textSize="30dp" />

            <TextView
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description / Location"
                android:id="@+id/textView21"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:textSize="25dp"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/descriptionEditText"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date and Time: "
                android:id="@+id/textVidt"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/dateTimeText"
                    android:textSize="23dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="20dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Ok"
            android:id="@+id/button10"
            android:onClick="editReminder"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/li" />

    </RelativeLayout>
</ScrollView>