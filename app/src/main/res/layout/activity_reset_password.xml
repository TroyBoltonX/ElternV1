<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.charisha.elternv1.ResetPasswordActivity">

    <TextView
        android:text="Password Reset"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:id="@+id/tvResetTitle"
        android:textSize="30dp"
        android:textColor="#4021ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:background="#4beaff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:id="@+id/button6"
        android:onClick="resetPassword"
        android:layout_below="@+id/newPasswordET"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questionText"
        android:textSize="30dp"
        android:layout_above="@+id/resetAnswerET"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/resetAnswerET" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetAnswerET"
        android:textSize="30dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter new password"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:layout_below="@+id/resetAnswerET"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:gravity="center"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please answer to reset password"
        android:id="@+id/textView19"
        android:layout_below="@+id/tvResetTitle"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPasswordET"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:singleLine="true"/>

</RelativeLayout>
