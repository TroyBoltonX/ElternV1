<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <TextView android:text="Eltern "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="#2b1eff"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#4beaff"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Register Carer / Elder"
        android:id="@+id/button"
        android:onClick="openRegister"
        android:textSize="25dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Login"
        android:id="@+id/button2"
        android:onClick="login"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:text="Forgot / Reset password"
        android:id="@+id/button3"
        android:onClick="forgotPassword"
        android:width="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="for Elderly &amp; their Carers"
        android:id="@+id/textView10"
        android:layout_below="@+id/title"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:textColor="#727272"
        android:gravity="center"
        android:layout_alignEnd="@+id/title"
        android:background="#4beaff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/textView12"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/userNameET"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textColor="#1c08ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameET"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button"
        android:textSize="30dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/textView4"
        android:layout_below="@+id/userNameET"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textColor="#1c08ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordET"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

</RelativeLayout>
